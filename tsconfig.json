{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "jsx": "react"
    },
    "include": [
        "src/*",
        "src/**/*",
        "src/**/**/*",
    ],
    "exclude": [
        "lib",
        "node_modules",
        "**/*.spec.ts"
    ]
}